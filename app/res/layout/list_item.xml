<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_margin="15dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/AmountBox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="10dp"
            android:textSize="20sp"
            android:background="#28837F7F"
            app:layout_editor_absoluteX="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/amount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:textSize="20sp"
                app:layout_editor_absoluteX="0dp"
                android:background="#28837F7F"
                />

            <TextView
                android:id="@+id/sendOrReceive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:padding="10dp"
                app:layout_editor_absoluteX="0dp"
                android:background="#28837F7F"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/confidenceType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/AmountBox"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:textSize="15sp"
            android:background="#28837F7F"
            app:layout_editor_absoluteX="0dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            app:layout_constraintTop_toBottomOf="@+id/confidenceType"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:textSize="15sp"
            android:background="#28837F7F"
            app:layout_editor_absoluteX="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
